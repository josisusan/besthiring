<header>
  
  <div id="logo">
    <%= link_to "BestHiring", jobs_path %>
  </div>
  
  <div id="auth_nav">
    <% if admin_signed_in? %>
      <%= link_to "Edit Admin Profile", edit_admin_registration_path %> |
      <%= link_to "Log Out", destroy_admin_session_path %>
    <% elsif user_signed_in? %>
      <%= link_to "Edit User Profile", edit_user_registration_path %> |
      <%= link_to "Log Out", destroy_user_session_path %>
    <% else %>
      <%= link_to "Log In", new_user_session_path %> | 
      <%= link_to "Sign Up", new_user_session_path %>
    <% end %>
  </div>

  <div id="admin_auth_nav">
    <% if !admin_signed_in? %>
    <%= link_to "Sign In as Admin", new_admin_session_path %>
    <% end %>
  </div>
  
  <nav>
    <ul>
      <li>View Jobs</li>
      <% if admin_signed_in? %>
        <li><%= link_to "Add Jobs", new_job_path%></li>
      <% end %>
      <% if user_signed_in? %>
        <li><%= link_to "Complete My Profile", new_user_profile_path(current_user.id)%></li>
      <% end %>
    </ul>
  </nav>

</header>
